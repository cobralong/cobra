<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
        <title>应用汇-管理后台</title>
        <#include "lib/base_source.ftl">
    </head>
    <body>
        <div class='whole-container'>
            <#include "/lib/header.ftl">
            <link rel="stylesheet" type="text/css" media="screen" href="${rc.contextPath}/css/bootstrap-multiselect.css">
            <div>
                <ul class="breadcrumb">
                    <li>管理后台</li><span class="divider">/</span>
                    <li>分类添加</li>
                </ul>
            </div>

            <div id="addInfoDiv">
                <#if msg??>
                <font color="red">${msg}</font>
                </#if>
            </div>
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="container span12">
                        <#include "lib/alert.ftl">
                        <div class='main-content'>
                            <div class="well form-inline">
                                <div class='main-action'>
                                    <form id="iform" name="iform" action="${rc.contextPath}/auth/interception/add" method="post">	
                                        <div class="input-prepend">
                                            <span class="add-on">rootId</span>
                                            <input id="input_1" class="span2" style="width:200px" name="rid" type="text" placeholder="应用ID"  value="">
                                        </div>                                
                                        <div class="input-prepend">
                                            <span class="add-on">排序</span>
                                            <input id="input_2" class="span2" style="width:200px" name="rank" type="text" placeholder="排序"  value="${shortDesc}">
                                        </div>
                                        <br/>
                                        <div class="input-prepend">
                                            <span class="add-on">渠道</span>
                                            <@spring.formChannelSelect "para.channel", channels, " " />
                                        </div>
                                        <div class="input-prepend">
                                            <span class="add-on">列表分类</span>
                                            <input id="input_3" class="span2" style="width:200px" name="cataId" type="text" placeholder="列表分类"  value="">

                                        </div>
                                        <div class="input-prepend">
                                            <span class="add-on">列表类型</span>
                                            <input id="input_3" class="span2" style="width:200px" name="rankType" type="text" placeholder="列表类型"  value="">

                                        </div>
                                        <button class="btn btn-info add" >
                                            <i class="icon-search icon-white"></i>增加
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript" src='${rc.contextPath}/js/bootstrap-multiselect.js'></script>
    </body>
</html>